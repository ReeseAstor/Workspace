# Server
PORT=3000
LOG_LEVEL=info
LOG_PRETTY=false

# Risk + execution controls
PROFIT_THRESHOLD_BPS=75
MAX_QUOTE_AGE_MS=4500
FX_SPREAD_BPS=15
NETWORK_FEE_BPS=10
DEFAULT_CARD_QUANTITY=5
MAX_CARDS_PER_TRADE=25
EXECUTION_HOLD_TIMEOUT_MS=2500

# Streaming
SSE_HEARTBEAT_MS=15000
MAX_OPPORTUNITIES_TRACKED=50

# Storage
SQLITE_DB_PATH=./arbitrage.db

# Optional mock data toggle (keep false in production)
ENABLE_MOCK_MARKETS=false

# Example sell-side marketplace (cards offered for sale)
MKT_ALPHA_ENABLED=true
MKT_ALPHA_SIDE=sell
MKT_ALPHA_NAME=AlphaCards Outlet
MKT_ALPHA_URL=https://api.alphacards.example.com/v1/quotes
MKT_ALPHA_TOKEN=
MKT_ALPHA_POLL_MS=1500
MKT_ALPHA_TIMEOUT_MS=3500
MKT_ALPHA_FEE_BPS=35
MKT_ALPHA_SLIPPAGE_BPS=8
MKT_ALPHA_CURRENCY=USD
MKT_ALPHA_BRANDS=Amazon,Apple,PlayStation

# Example buy-side marketplace (platforms buying cards)
MKT_BRAVO_ENABLED=true
MKT_BRAVO_SIDE=buy
MKT_BRAVO_NAME=BravoResellers Desk
MKT_BRAVO_URL=https://broker.bravo.example.com/v2/bids
MKT_BRAVO_TOKEN=
MKT_BRAVO_POLL_MS=2000
MKT_BRAVO_TIMEOUT_MS=3500
MKT_BRAVO_FEE_BPS=28
MKT_BRAVO_SLIPPAGE_BPS=10
MKT_BRAVO_CURRENCY=USD
MKT_BRAVO_BRANDS=Amazon,Apple,PlayStation

